#!/bin/bash


#!/bin/bash
# dthdpchk
m="dta1 dtm1 dtm2"
w="dtw1 dtw2 dtw3 dtw4"


for n in $m $w
do
	echo $n
	echo "----"
done

exit 1


for n in $m $w
do
   nc -w 1 -z $n 22 &>/dev/null
   if [ "$?" == "0" ]; then
      echo "[$n]"
      ssh $n 'hadoop version | head -n 1'
      ssh $n 'hadoop checknative'

      echo ""
   fi
done

